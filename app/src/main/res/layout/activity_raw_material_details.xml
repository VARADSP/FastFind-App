<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.hp.project.RawMaterialDetails"
android:padding="@dimen/activity_horizontal_margin">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/raw_material_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="RAW MATERIAL DETAILS"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="30sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rm_spec_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/rm_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="RM Specification / Grade"/>
        </android.support.design.widget.TextInputLayout>

        <!--<EditText-->
            <!--android:id="@+id/rec_chan_date"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Receipt Challan Date"-->
            <!--android:layout_marginTop="4dp"/>-->

        <!--<EditText-->
            <!--android:id="@+id/start_date"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Starting Date"-->
            <!--android:layout_marginTop="4dp"/>-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sheet_size_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/sheet_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sheet Size / Coil"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/No_sheet_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/no_Sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. Sheet/ Coil Used"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/strip_thickness_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/strip_thickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Strip Thickness"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/strip_width_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/strip_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Strip/ Coil Width"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/strip_length_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/strip_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Strip/ Coil Length or wt"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/strip_per_sheet_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/strip_per_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Strips per Sheet"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/blank_per_strip_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/blank_per_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blanks per Strip/ Coil"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/blank_per_sheet_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/blank_per_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blanks per Sheet/ Coil"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Blanks"
            android:textSize="20dp"
            android:textColor="#000000"
            android:clickable="true"
            android:background="#88dafa"/>

        <TextView
            android:id="@+id/total_blanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp" />

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:id="@+id/total_blanks_wrapper"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dp">-->
            <!--<EditText-->
                <!--android:id="@+id/total_blanks"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Total Blanks"-->
                <!--android:inputType="numberDecimal" />-->
        <!--</android.support.design.widget.TextInputLayout>-->


        <Button
            android:id="@+id/next2_btn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordWrapper"
            android:text="NEXT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#88dafa" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>
