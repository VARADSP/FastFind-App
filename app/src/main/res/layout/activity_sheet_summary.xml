<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.project.SheetSummary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sheet_summary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="SHEET SUMMARY DETAILS"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="30sp" />



        <android.support.design.widget.TextInputLayout
        android:id="@+id/issued_quantity_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <EditText
            android:id="@+id/Issued_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Issued Qty"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/accepted_quantity_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/ccepted_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Accepted Qty"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rejected_quantity_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/rejected_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rejected Qty"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dispatched_quantity_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/dispatched_quantity"
            android:layout_width="402dp"
            android:layout_height="wrap_content"
            android:hint="Dispatched Qty"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/invoice11_date_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="30dp"
        android:hint="Varified By" />

        <Button
            android:id="@+id/home_page_btn"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Page"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#88dafa"
            />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
