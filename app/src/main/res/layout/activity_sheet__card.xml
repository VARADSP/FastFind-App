<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.project.Sheet_Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choose_activity_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="47dp"
            android:gravity="center"
            android:text="CHOOSE SECTION"
            android:textColor="#333333"
            android:textSize="30sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/invoice_no_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/invoice11_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="Invoice No"/>
        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/work_order_details_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORK ORDER DETAILS"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#88dafa"/>

        <Button
            android:id="@+id/production_details_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRODUCTION DETAILS"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#88dafa"/>

        <Button
            android:id="@+id/dispatch_details_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISPATCH DETAILS"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#88dafa"/>

        <Button
            android:id="@+id/sheet_summary_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHEET SUMMARY"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#88dafa"/>


    </LinearLayout>
</RelativeLayout>





