<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.project.ProductionDetails9"
    android:padding="@dimen/activity_horizontal_margin">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/production_details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="PRODUCTION DETAILS"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/inspection_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Operation: Inspection"
                android:textColor="#000000"
                android:textSize="20sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inspection_machine_no_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/inspection_machine_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="M/C No"/>
            </android.support.design.widget.TextInputLayout>


            <EditText
                android:id="@+id/inspection_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/inspection_comp_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Completion Date"
                android:layout_marginTop="4dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inspection_input_quantity_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <EditText
                    android:id="@+id/inspection_input_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Input Qty"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inspection_accepted_quantity_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <EditText
                    android:id="@+id/inspection_accepted_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Accepted Qty"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inspection_rejected_quantity_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/inspection_rejected_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rejected Qty"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/inspection_output_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qutput Qty"
                android:textSize="20sp"
                android:textColor="#000000"
                android:clickable="true"
                android:background="#88dafa"/>

            <TextView
                android:id="@+id/inspection_output_qty1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inspection_Prod_receipt_no_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/inspection_prod_receipt_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Production Receipt No"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inspection_remark_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/inspection_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remark"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/next11_btn"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#88dafa"/>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
